FROM python:3.11-slim

WORKDIR /app

# Install praisonai with bot dependencies
RUN pip install --no-cache-dir praisonai[bot]

# Copy config (user provides at runtime via volume or build arg)
COPY bot.yaml /app/bot.yaml

# Run the bot
CMD ["python", "-m", "praisonai", "bot", "start", "--config", "/app/bot.yaml"]
